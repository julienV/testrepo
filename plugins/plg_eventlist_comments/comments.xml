 <!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5.7" type="plugin" group="eventlist" method="upgrade">
  <name>Eventlist - Comments</name>
  <creationDate>17/05/2009</creationDate>
  <author>Christoph Lukes</author>
  <authorEmail>info@schlu.net</authorEmail>
  <authorUrl>http://www.schlu.net</authorUrl> 
  <copyright>This extension is released under the GNU/GPL License</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <version>1.1</version>
  <description>EVENTLIST COMMENTS PLUGIN DESC</description>
  
	<files>
		<filename plugin="comments">comments.php</filename>
	</files>
    
	<languages>
		<language tag="en-GB">languages/en-GB.plg_eventlist_comments.ini</language>
	</languages>
  
	<params>
    <param type="list" name="commentsystem" label="COMMENTSYSTEM" default="0" description="COMMENTSYSTEM DESC">
    	<option value="0">NONE</option>
		<option value="1">JOMCOMMENTS</option>
		<option value="2">JCOMMENTS</option>
		<option value="3">JXTENDED COMMENTS</option>
	</param>
	</params>

</install>