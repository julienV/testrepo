<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5.7" type="plugin" group="eventlist" method="upgrade">
  <name>Eventlist - Mailer plugin</name>
  <creationDate>20/02/2009</creationDate>
  <author>Christoph Lukes</author>
  <authorEmail>info@schlu.net</authorEmail>
  <authorUrl>http://www.schlu.net</authorUrl> 
  <copyright>This extension is released under the GNU/GPL License</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <version>1.0</version>
  <description>EVENTLISTMAILER PLUGIN DESC</description>
  
	<files>
		<filename plugin="mailer">mailer.php</filename>
	</files>
    
	<languages>
		<language tag="en-GB">languages/en-GB.plg_eventlist_mailer.ini</language>
	</languages>
  
	<params>
    <param type="radio" name="reg_mail_user" label="MAIL USER REG" default="1" description="MAIL USER REG DESC">
    	<option value="0">No</option>
		<option value="1">Yes</option>
	</param>
	<param type="radio" name="reg_mail_admin" label="MAIL ADMIN REG" default="0" description="MAIL ADMIN REG DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
	</param>
	<param type="radio" name="unreg_mail_user" label="MAIL USER UNREG" default="1" description="MAIL USER UNREG DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
	</param>
	<param type="radio" name="unreg_mail_admin" label="MAIL ADMIN UNREG" default="0" description="MAIL ADMIN UNREG DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	
	<param type="radio" name="newevent_mail_user" label="MAIL USER NEW EVENT" default="0" description="MAIL USER NEW EVENT DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	<param type="radio" name="newevent_mail_admin" label="MAIL ADMIN NEW EVENT" default="0" description="MAIL ADMIN NEW EVENT DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
		<param type="radio" name="editevent_mail_user" label="MAIL USER EDIT EVENT" default="0" description="MAIL USER EDIT EVENT DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	<param type="radio" name="editevent_mail_admin" label="MAIL ADMIN EDIT EVENT" default="0" description="MAIL ADMIN EDIT EVENT DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
		<param type="radio" name="newvenue_mail_user" label="MAIL USER NEW VENUE" default="0" description="MAIL USER NEW VENUE DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	<param type="radio" name="newvenue_mail_admin" label="MAIL ADMIN NEW VENUE" default="0" description="MAIL ADMIN NEW VENUE DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
		<param type="radio" name="editvenue_mail_user" label="MAIL USER EDIT VENUE" default="0" description="MAIL USER EDIT VENUE DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	<param type="radio" name="editvenue_mail_admin" label="MAIL ADMIN EDIT VENUE" default="0" description="MAIL ADMIN EDIT VENUE DESC">
		<option value="0">No</option>
		<option value="1">Yes</option>
    </param>
	
	<param type="text" name="receivers" label="ADMIN MAIL RECEIVERS" default="" description="ADMIN MAIL RECEIVERS DESC" />
	</params>

</install>